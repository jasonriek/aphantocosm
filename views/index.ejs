<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aphantocosm</title>
    <link rel="icon" href="/images/aphantocosm.ico" type="image/x-icon"/>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/leaflet.css">
    <script src="/js/leaflet.js"></script>
    <script src="/js/Leaflet.VectorGrid.bundled.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@500;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <h2 class="header-title" onclick="javascript:window.location='/'">Aphantocosm</h2>
        <p>Welcome to the hidden world.</p>
    </header>
    <main>
        <section>
            <p>Sightings Map</p>
            <div id="map"></div>
            <% for (let article of articles) { %>
                <a href="/articles/<%- article.category %>/<%- article.title %>">aphantocosm.com/articles/<%- article.category %>/<%- article.title %></a>
                <br><br>
            <% } %>

        </section>
        
    </main>
    <footer>
        <p>&copy; 2024 Aphantocosm. All rights reserved.</p>
    </footer>

    
    <script>
        let map = L.map('map').setView([35.341711, -114.164586], 5);
    
        L.vectorGrid.protobuf('https://map.aphantocosm.com/data/v3/{z}/{x}/{y}.pbf', {
            vectorTileLayerStyles: {
                // Add your vector tile styles here
            },
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);
      
    
        L.marker([35.341711, -114.164586]).addTo(map)
          .bindPopup('HQ')
          .openPopup();
        
          L.marker([26.9633722, -82.3854611]).addTo(map)
          .bindPopup('<a href="/articles/ufos/first-encounter" target="_blank">First Encounter</a>')
          .openPopup(); 
      </script>
</body>
</html>
